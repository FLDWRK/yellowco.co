source 'https://rubygems.org'
ruby '2.3.1'

group :development, :test do
  gem 'pry'
  gem 'rb-readline'
end

group :development do
  gem 'github-pages'
  gem 'guard', '2.13.0'    # Locked at 2.13.0 due to incompatility with guard-copy
  gem 'guard-copy'
  gem 'guard-livereload'
  gem 'guard-sass'
  gem 'guard-sprockets'
  gem 'jekyll', '<3.5'
  gem 'uglifier'
end

group :jekyll_plugins do
  gem 'jekyll-compose'
  gem 'jekyll-feed'
  gem 'jekyll-redirect-from'
  gem 'jekyll-sitemap'
  gem 'jekyll-paginate'
  gem 'jekyll-seo-tag'
end
